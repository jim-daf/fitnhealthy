            <TextView
                android:id="@+id/changeBiometricData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/aldrich"
                android:gravity="center"
                android:text="Update your biometric data"
                android:textColor="#B5000000"
                android:textSize="17sp"
                android:textStyle="bold"

                />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/newAge"
                android:layout_width="310dp"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="25dp"
                android:background="@drawable/input_background2"
                android:drawablePadding="5dp"
                android:fontFamily="@font/aldrich"
                android:hint="Your age"
                android:inputType="numberDecimal"
                android:paddingStart="15dp"
                android:textSize="15sp"
                tools:ignore="VisualLintTextFieldSize" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/newWeight"
                android:layout_width="310dp"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="25dp"
                android:background="@drawable/input_background2"
                android:drawablePadding="5dp"
                android:fontFamily="@font/aldrich"
                android:hint="Your weight"
                android:inputType="numberDecimal"
                android:paddingStart="15dp"
                android:textSize="15sp"
                tools:ignore="VisualLintTextFieldSize" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/newHeight"
                android:layout_width="310dp"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="25dp"
                android:background="@drawable/input_background2"
                android:drawablePadding="5dp"
                android:fontFamily="@font/aldrich"
                android:hint="Your height"
                android:inputType="numberDecimal"
                android:paddingStart="15dp"
                android:textSize="15sp"
                tools:ignore="VisualLintTextFieldSize" />

            <Button
                android:id="@+id/saveProfData"
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="65dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/input_background2"
                android:fontFamily="@font/aldrich"
                android:padding="15dp"
                android:text="Save" />
        </LinearLayout>


</ScrollView>