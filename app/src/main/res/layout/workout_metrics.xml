        <TextView
            android:id="@+id/changeBiometricData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/aldrich"
            android:gravity="center"
            android:text="Update your workout metrics"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#B5000000"

            />





        <Spinner
            android:id="@+id/dropdown_experiences"
            android:layout_width="310dp"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:entries="@array/experience_values"
            android:background="@drawable/input_background2"
            android:drawablePadding="5dp"
            android:paddingStart="10dp"
            android:fontFamily="@font/aldrich"
            android:textSize="16sp"
            />
        <Spinner
            android:id="@+id/frequency_of_training"
            android:layout_width="310dp"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:entries="@array/frequency_values"
            android:background="@drawable/input_background2"
            android:paddingStart="10dp"
            android:fontFamily="@font/aldrich"
            android:textSize="16sp"
            />


        <Button
            android:id="@+id/saveProfData"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="65dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/input_background2"
            android:fontFamily="@font/aldrich"
            android:padding="15dp"
            android:text="Save" />
    </LinearLayout>


</ScrollView>