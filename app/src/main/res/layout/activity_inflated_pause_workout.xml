<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:id="@+id/pauseWorkoutLayout"
    android:theme="@style/Theme.Transparent"
    android:layout_gravity="center"
    android:scrollbars="none"



    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="14dp"
        >


            <LinearLayout
                android:id="@+id/backgroundOfContinue"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:orientation="vertical"
                android:background="@drawable/input_background2"
                android:paddingStart="30dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:paddingEnd="30dp"

                android:layout_marginVertical="10dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                >

                <TextView
                    android:id="@+id/continueTxtView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Continue"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:fontFamily="@font/aldrich"
                    android:clickable="true"
                    android:gravity="center"
                    android:layout_gravity="center"


                    android:drawableEnd="@drawable/resume"
                    android:drawablePadding="5dp"


                    />





            </LinearLayout>




            <LinearLayout
                android:id="@+id/backgroundOfFinish"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:orientation="vertical"
                android:background="@drawable/input_background2"
                android:paddingStart="30dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:paddingEnd="30dp"
                android:layout_marginBottom="10dp"


                >

                <TextView
                    android:id="@+id/finishTxtView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Finish"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:fontFamily="@font/aldrich"
                    android:clickable="true"
                    android:gravity="center"
                    android:layout_gravity="center"


                    android:drawableEnd="@drawable/forward_arrow"
                    android:drawablePadding="5dp"


                    />





            </LinearLayout>
        <LinearLayout
            android:id="@+id/backgroundOfExit"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:background="@drawable/input_background2"
            android:paddingStart="30dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingEnd="30dp"
            android:layout_marginBottom="15dp"


            >

            <TextView
                android:id="@+id/exitTxtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Exit"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:fontFamily="@font/aldrich"
                android:clickable="true"
                android:gravity="center"
                android:layout_gravity="center"


                android:drawableEnd="@drawable/return_exit"
                android:drawablePadding="5dp"


                />





        </LinearLayout>





    </LinearLayout>



</ScrollView>