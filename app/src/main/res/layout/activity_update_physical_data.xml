            <TextView
                android:id="@+id/changePhysicalAttributes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/aldrich"
                android:gravity="center"
                android:text="Update your physical attributes"
                android:textColor="#B5000000"

                android:textSize="16sp"
                android:textStyle="bold"

                />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/newAge"
                android:layout_width="310dp"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="25dp"
                android:background="@drawable/input_background2"
                android:drawablePadding="5dp"
                android:fontFamily="@font/aldrich"
                android:hint="Type your age"
                android:inputType="numberSigned"
                android:textColorHint="#B5000000"
                android:textColor="#B5000000"
                android:paddingStart="15dp"
                android:textSize="14sp"
                tools:ignore="VisualLintTextFieldSize" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/newWeight"
                android:layout_width="310dp"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="25dp"
                android:background="@drawable/input_background2"
                android:drawablePadding="5dp"
                android:fontFamily="@font/aldrich"
                android:hint="Type your weight"
                android:inputType="numberDecimal"
                android:textColorHint="#B5000000"
                android:textColor="#B5000000"
                android:paddingStart="15dp"
                android:textSize="14sp"
                tools:ignore="VisualLintTextFieldSize" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/newHeight"
                android:layout_width="310dp"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="25dp"
                android:background="@drawable/input_background2"
                android:drawablePadding="5dp"
                android:fontFamily="@font/aldrich"
                android:hint="Type your height"
                android:inputType="numberDecimal"
                android:textColorHint="#B5000000"
                android:textColor="#B5000000"
                android:paddingStart="15dp"
                android:textSize="14sp"
                tools:ignore="VisualLintTextFieldSize" />

            <Spinner
                android:id="@+id/spinner_gender"
                android:layout_width="310dp"
                android:layout_height="50dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/input_background2"
                android:drawablePadding="5dp"
                android:fontFamily="@font/aldrich"
                android:paddingStart="15dp"
                android:textSize="14sp"
                android:layout_weight="1"
                android:ellipsize="marquee"
                android:entries="@array/gender"

                />

            <Button
                android:id="@+id/savePhysicalData"
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="65dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/input_background2"
                android:fontFamily="@font/aldrich"
                android:textColor="#B5000000"
                android:padding="15dp"
                android:text="Save" />
        </LinearLayout>


</ScrollView>