<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    android:background="#DA000000"

    android:id="@+id/selectionCategoriesLayout"
    tools:context=".WorkoutOptions"

    >





        <GridLayout
            android:id="@+id/gridLayoutForWorkoutOptions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="76dp"
            android:alignmentMode="alignMargins"
            android:columnCount="1"
            android:columnOrderPreserved="false"
            android:rowCount="3"
            android:layout_marginTop="20dp"
            >





            <androidx.cardview.widget.CardView
                android:id="@+id/CreateYourOwnWorkoutCard"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView

                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/create"
                        android:layout_marginBottom="7dp"
                        android:layout_marginTop="2dp"
                        />

                    <TextView
                        android:id="@+id/CreateYourOwnWorkoutCardText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="Create a new workout"
                        android:textAlignment="center"
                        android:fontFamily="@font/aldrich"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="#fff"
                        android:layout_marginTop="1dp"
                        />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/SelectAWorkoutCard"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"

                app:cardCornerRadius="8dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView

                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/select"
                        android:layout_marginBottom="6dp"
                        />

                    <TextView
                        android:id="@+id/SelectAWorkoutCardText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="Select a workout"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textColor="#fff"
                        android:fontFamily="@font/aldrich"
                        android:textSize="13sp"

                        />


                </LinearLayout>

            </androidx.cardview.widget.CardView>







            <androidx.cardview.widget.CardView
                android:id="@+id/GenerateWorkoutCard"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="20dp"
                android:layout_row="2"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"


                app:cardCornerRadius="8dp"
                app:cardElevation="5dp"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:src="@drawable/generate"
                        android:layout_marginBottom="7dp"
                        />
                    <TextView
                        android:id="@+id/GenerateWorkoutCardText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="5dp"
                        android:text="Get a workout based on your profile"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textColor="#fff"
                        android:fontFamily="@font/aldrich"
                        android:textSize="13sp"
                        />


                </LinearLayout>

            </androidx.cardview.widget.CardView>





        </GridLayout>



</ScrollView>