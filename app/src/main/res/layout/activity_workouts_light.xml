<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:id="@+id/workoutsLayoutLight"
    android:theme="@style/Theme.AppCompat.Light.NoActionBar"
    tools:context=".Workouts"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >

        <GridLayout
            android:id="@+id/gridLayoutWorkouts"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"

            android:alignmentMode="alignMargins"
            android:columnCount="1"
            android:columnOrderPreserved="false"
            android:rowCount="4"

            >

            <androidx.cardview.widget.CardView
                android:id="@+id/workoutsCard"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="15dp"
                app:cardBackgroundColor="#D5C8C8"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"

                >

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/bodyFocustxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="@font/aldrich"
                            android:text="Body focus"
                            android:textColor="#B5000000"
                            android:textSize="13sp"
                            android:textStyle="bold">

                        </TextView>

                        <Spinner
                            android:id="@+id/spinner_difficulty"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"

                            android:layout_marginEnd="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="1"
                            android:ellipsize="marquee"
                            android:entries="@array/difficulty_values"
                            android:gravity="end"

                            android:textStyle="bold"

                            />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/cardContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/chestCard"
                            android:layout_width="140dp"
                            android:layout_height="130dp"
                            android:layout_rowWeight="1"
                            android:layout_columnWeight="1"
                            android:layout_gravity="fill"
                            android:layout_marginTop="20dp"
                            android:layout_marginEnd="25dp"
                            app:cardBackgroundColor="#ffffff"
                            app:cardCornerRadius="30dp"
                            app:cardElevation="8dp">

                            <LinearLayout
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical|center_horizontal"
                                android:background="#00000000"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView

                                    android:layout_width="55dp"
                                    android:layout_height="55dp"
                                    android:layout_marginBottom="7dp"
                                    android:src="@drawable/chest" />

                                <TextView
                                    android:id="@+id/ChestCardText"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"

                                    android:fontFamily="@font/aldrich"
                                    android:text="Chest"

                                    android:textAlignment="center"
                                    android:textColor="#B5000000"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />


                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/armsCard"
                            android:layout_width="140dp"
                            android:layout_height="130dp"
                            android:layout_rowWeight="1"


                            android:layout_columnWeight="1"

                            android:layout_gravity="fill"
                            android:layout_marginTop="20dp"
                            app:cardBackgroundColor="#ffffff"
                            app:cardCornerRadius="30dp"
                            app:cardElevation="8dp">

                            <LinearLayout
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical|center_horizontal"
                                android:layout_marginTop="3dp"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="45dp"
                                    android:layout_marginBottom="6dp"
                                    android:src="@drawable/arms" />

                                <TextView
                                    android:id="@+id/armsCardText"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/aldrich"
                                    android:text="Arms"
                                    android:textAlignment="center"
                                    android:textColor="#B5000000"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />


                            </LinearLayout>
                        </androidx.cardview.widget.CardView>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/cardContainer2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/absCard"

                            android:layout_width="140dp"
                            android:layout_height="130dp"
                            android:layout_rowWeight="1"

                            android:layout_columnWeight="1"

                            android:layout_gravity="fill"

                            android:layout_marginTop="20dp"
                            android:layout_marginEnd="25dp"
                            app:cardBackgroundColor="#ffffff"
                            app:cardCornerRadius="30dp"
                            app:cardElevation="8dp">

                            <LinearLayout
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical|center_horizontal"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="45dp"
                                    android:layout_height="45dp"
                                    android:layout_marginBottom="7dp"
                                    android:src="@drawable/crunches" />

                                <TextView
                                    android:id="@+id/AbsCardText"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"

                                    android:fontFamily="@font/aldrich"
                                    android:text="Abs"
                                    android:textAlignment="center"
                                    android:textColor="#B5000000"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />


                            </LinearLayout>
                        </androidx.cardview.widget.CardView>


                        <androidx.cardview.widget.CardView
                            android:id="@+id/legsCard"
                            android:layout_width="140dp"
                            android:layout_height="130dp"
                            android:layout_rowWeight="1"
                            android:layout_columnWeight="1"
                            android:layout_gravity="fill"
                            android:layout_marginStart="0dp"
                            android:layout_marginTop="20dp"
                            app:cardBackgroundColor="#ffffff"
                            app:cardCornerRadius="30dp"
                            app:cardElevation="8dp">

                            <LinearLayout
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical|center_horizontal"
                                android:layout_marginTop="1dp"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="55dp"
                                    android:layout_height="55dp"
                                    android:layout_marginBottom="0dp"
                                    android:src="@drawable/legs" />

                                <TextView
                                    android:id="@+id/LegsCardText"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="7dp"
                                    android:fontFamily="@font/aldrich"
                                    android:text="Legs"
                                    android:textAlignment="center"
                                    android:textColor="#B5000000"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />


                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/shortTimeWorkouts"
                android:layout_width="170dp"
                android:layout_height="180dp"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="15dp"
                app:cardBackgroundColor="#D5C8C8"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/aldrich"
                        android:text="Short time workouts"
                        android:textColor="#B5000000"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="none">

                        <LinearLayout
                            android:id="@+id/shortTimeWorkoutsContainer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"

                            android:orientation="horizontal">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/planks10mincard"
                                android:layout_width="140dp"
                                android:layout_height="115dp"
                                android:layout_rowWeight="1"
                                android:layout_columnWeight="1"
                                android:layout_gravity="fill"
                                android:layout_marginStart="30dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginEnd="20dp"
                                app:cardBackgroundColor="#ffffff"
                                app:cardCornerRadius="30dp"
                                app:cardElevation="8dp">

                                <LinearLayout
                                    android:layout_width="150dp"
                                    android:layout_height="120dp"
                                    android:layout_gravity="center_vertical|center_horizontal"
                                    android:background="#00000000"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"
                                        android:layout_marginBottom="7dp"
                                        android:src="@drawable/plank" />

                                    <TextView
                                        android:id="@+id/plank10text"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/aldrich"
                                        android:text="Planks 10 min"
                                        android:textAlignment="center"
                                        android:textColor="#B5000000"
                                        android:textSize="10sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/plank10dif"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"

                                        android:fontFamily="@font/aldrich"
                                        android:text="Expert"

                                        android:textAlignment="center"
                                        android:textColor="#B5000000"
                                        android:textSize="10sp"
                                        android:textStyle="bold" />


                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/tabata4Card"
                                android:layout_width="140dp"
                                android:layout_height="115dp"


                                android:layout_rowWeight="1"
                                android:layout_columnWeight="1"
                                android:layout_gravity="fill"

                                app:cardBackgroundColor="#ffffff"
                                app:cardCornerRadius="30dp"
                                app:cardElevation="8dp">

                                <LinearLayout
                                    android:layout_width="150dp"
                                    android:layout_height="120dp"
                                    android:layout_gravity="center_vertical|center_horizontal"
                                    android:background="#00000000"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="45dp"
                                        android:layout_height="45dp"
                                        android:layout_marginTop="5dp"
                                        android:layout_marginBottom="7dp"
                                        android:src="@drawable/tabata" />

                                    <TextView
                                        android:id="@+id/tabata4"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/aldrich"
                                        android:text="Tabata 4 min"
                                        android:textAlignment="center"
                                        android:textColor="#B5000000"
                                        android:textSize="10sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/tabata4difficulty"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"

                                        android:fontFamily="@font/aldrich"
                                        android:text="Beginner"

                                        android:textAlignment="center"
                                        android:textColor="#B5000000"
                                        android:textSize="10sp"
                                        android:textStyle="bold" />


                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/fatBurning10Card"
                                android:layout_width="140dp"
                                android:layout_height="115dp"
                                android:layout_rowWeight="1"
                                android:layout_columnWeight="1"
                                android:layout_gravity="fill"
                                android:layout_marginStart="20dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginEnd="25dp"
                                app:cardBackgroundColor="#ffffff"
                                app:cardCornerRadius="30dp"
                                app:cardElevation="8dp">

                                <LinearLayout
                                    android:layout_width="150dp"
                                    android:layout_height="120dp"
                                    android:layout_gravity="center_vertical|center_horizontal"
                                    android:background="#00000000"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:layout_marginStart="2dp"
                                        android:layout_marginTop="9dp"
                                        android:layout_marginBottom="7dp"
                                        android:src="@drawable/fatburn" />

                                    <TextView
                                        android:id="@+id/fatBurning10text"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/aldrich"
                                        android:text="Fat burning 10 min"
                                        android:textAlignment="center"
                                        android:textColor="#B5000000"
                                        android:textSize="10sp"
                                        android:textStyle="bold"

                                        />

                                    <TextView
                                        android:id="@+id/fatBurning10dif"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"

                                        android:fontFamily="@font/aldrich"
                                        android:text="Intermediate"

                                        android:textAlignment="center"
                                        android:textColor="#B5000000"
                                        android:textSize="10sp"
                                        android:textStyle="bold" />


                                </LinearLayout>
                            </androidx.cardview.widget.CardView>


                        </LinearLayout>

                    </HorizontalScrollView>
                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/otherWorkoutsCard"
                android:layout_width="170dp"
                android:layout_height="180dp"
                android:layout_row="3"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="25dp"
                app:cardBackgroundColor="#D5C8C8"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/aldrich"
                        android:text="Other workouts"
                        android:textColor="#B5000000"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="none">

                        <LinearLayout
                            android:id="@+id/otherWorkoutsLinearLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"

                            android:orientation="horizontal">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cyclingCard"
                                android:layout_width="140dp"
                                android:layout_height="115dp"


                                android:layout_rowWeight="1"
                                android:layout_columnWeight="1"
                                android:layout_gravity="fill"
                                android:layout_marginStart="30dp"
                                app:cardBackgroundColor="#ffffff"
                                app:cardCornerRadius="30dp"
                                app:cardElevation="8dp">

                                <LinearLayout
                                    android:layout_width="150dp"
                                    android:layout_height="120dp"
                                    android:layout_gravity="center_vertical|center_horizontal"
                                    android:background="#00000000"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"
                                        android:layout_marginBottom="7dp"
                                        android:src="@drawable/cycling" />

                                    <TextView
                                        android:id="@+id/cycling"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/aldrich"
                                        android:text="Cycling"
                                        android:textAlignment="center"
                                        android:textColor="#B5000000"
                                        android:textSize="10sp"
                                        android:textStyle="bold" />


                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/runningCard"
                                android:layout_width="140dp"
                                android:layout_height="115dp"
                                android:layout_rowWeight="1"
                                android:layout_columnWeight="1"
                                android:layout_gravity="fill"
                                android:layout_marginStart="20dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginEnd="0dp"
                                app:cardBackgroundColor="#ffffff"
                                app:cardCornerRadius="30dp"
                                app:cardElevation="8dp">

                                <LinearLayout
                                    android:layout_width="150dp"
                                    android:layout_height="120dp"
                                    android:layout_gravity="center_vertical|center_horizontal"
                                    android:background="#00000000"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"
                                        android:layout_marginStart="0dp"
                                        android:layout_marginTop="0dp"
                                        android:layout_marginEnd="4dp"
                                        android:layout_marginBottom="7dp"
                                        android:src="@drawable/running" />

                                    <TextView
                                        android:id="@+id/runningtext"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/aldrich"
                                        android:text="Running"
                                        android:textAlignment="center"
                                        android:textColor="#B5000000"
                                        android:textSize="10sp"
                                        android:textStyle="bold"

                                        />


                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/walkingCard"
                                android:layout_width="140dp"
                                android:layout_height="115dp"
                                android:layout_rowWeight="1"
                                android:layout_columnWeight="1"
                                android:layout_gravity="fill"
                                android:layout_marginStart="20dp"
                                android:layout_marginTop="20dp"

                                app:cardBackgroundColor="#ffffff"
                                app:cardCornerRadius="30dp"
                                app:cardElevation="8dp">

                                <LinearLayout
                                    android:layout_width="150dp"
                                    android:layout_height="120dp"
                                    android:layout_gravity="center_vertical|center_horizontal"
                                    android:background="#00000000"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="45dp"
                                        android:layout_height="45dp"
                                        android:layout_marginTop="5dp"
                                        android:layout_marginBottom="7dp"
                                        android:src="@drawable/walk" />

                                    <TextView
                                        android:id="@+id/walkingtext"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/aldrich"
                                        android:text="Walking"
                                        android:textAlignment="center"
                                        android:textColor="#B5000000"
                                        android:textSize="10sp"
                                        android:textStyle="bold" />


                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/tennisCard"
                                android:layout_width="140dp"
                                android:layout_height="115dp"
                                android:layout_rowWeight="1"
                                android:layout_columnWeight="1"
                                android:layout_gravity="fill"
                                android:layout_marginStart="20dp"
                                android:layout_marginTop="20dp"

                                app:cardBackgroundColor="#ffffff"
                                app:cardCornerRadius="30dp"
                                app:cardElevation="8dp">

                                <LinearLayout
                                    android:layout_width="150dp"
                                    android:layout_height="120dp"
                                    android:layout_gravity="center_vertical|center_horizontal"
                                    android:background="#00000000"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="42dp"
                                        android:layout_height="42dp"
                                        android:layout_marginTop="5dp"
                                        android:layout_marginEnd="7dp"
                                        android:layout_marginBottom="10dp"
                                        android:src="@drawable/tennis" />

                                    <TextView
                                        android:id="@+id/tennistext"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/aldrich"
                                        android:text="Tennis"
                                        android:textAlignment="center"
                                        android:textColor="#B5000000"
                                        android:textSize="10sp"
                                        android:textStyle="bold" />


                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/volleyCard"
                                android:layout_width="140dp"
                                android:layout_height="115dp"
                                android:layout_rowWeight="1"
                                android:layout_columnWeight="1"
                                android:layout_gravity="fill"
                                android:layout_marginStart="20dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginEnd="25dp"
                                app:cardBackgroundColor="#ffffff"
                                app:cardCornerRadius="30dp"
                                app:cardElevation="8dp">

                                <LinearLayout
                                    android:layout_width="150dp"
                                    android:layout_height="120dp"
                                    android:layout_gravity="center_vertical|center_horizontal"
                                    android:background="#00000000"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="40dp"
                                        android:layout_height="49dp"
                                        android:layout_marginBottom="7dp"
                                        android:src="@drawable/volleyball" />

                                    <TextView
                                        android:id="@+id/volleytext"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/aldrich"
                                        android:text="Volley"
                                        android:textAlignment="center"
                                        android:textColor="#B5000000"
                                        android:textSize="10sp"
                                        android:textStyle="bold" />


                                </LinearLayout>
                            </androidx.cardview.widget.CardView>


                        </LinearLayout>

                    </HorizontalScrollView>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/myWorkoutsCard"
                android:layout_width="170dp"
                android:layout_height="180dp"
                android:layout_row="2"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="15dp"
                app:cardBackgroundColor="#D5C8C8"
